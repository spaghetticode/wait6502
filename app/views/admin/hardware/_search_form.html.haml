- form_tag admin_hardware_index_path, :method => :get do
  %p
    = label_tag :keywords
    = text_field_tag :keywords, params[:keywords]
    = hidden_field_tag :category, params[:category]
    = label_tag :sort_by
    = select_tag :order, options_for_select(Hardware::SEARCH_FIELDS, params[:order])
    = label_tag :desc
    = check_box_tag :desc, 'DESC', params[:desc]
    = submit_tag 'search'