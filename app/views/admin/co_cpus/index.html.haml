%h1 Listing co-CPUs

= render :partial => 'admin/hardware/search_form', :locals => { :path => admin_co_cpus_path, :option_values => CoCpu::SEARCH_FIELDS, :hidden => {}}

%table.list{:cellpadding => 0, :cellspacing => 1}
  %tr
    %th Manufacturer
    %th Name
    %th Family
    %th Type
    %th Description
    %th{:colspan => 2} Actions
  - @co_cpus.each do |co_cpu|
    %tr
      %td= h co_cpu.manufacturer.name
      %td= h co_cpu.co_cpu_name_id
      %td= h co_cpu.cpu_family_id
      %td= h co_cpu.co_cpu_type_id
      %td= h truncate(co_cpu.description)
      %td= link_to 'Edit', edit_admin_co_cpu_path(co_cpu)
      %td= link_to 'Destroy', admin_co_cpu_path(co_cpu), :confirm => 'Are you sure?', :method => :delete

%p= link_to 'New co cpu', new_admin_co_cpu_path