%tr
  %th= f.label :manufacturer_id
  %td= manufacturer_selector(f)
%tr
  %th= f.label :co_cpu_name_id, 'Name'
  %td= f.select :co_cpu_name_id, CoCpuName.ordered.map(&:name), :include_blank => true
%tr
  %th= f.label :co_cpu_type_id, 'Type'
  %td= f.select :co_cpu_type_id, CoCpuType.ordered.map(&:name), :include_blank => true
%tr
  %th= f.label :cpu_family_id, 'CPU Family'
  %td= f.select :cpu_family_id, CpuFamily.ordered.map(&:name), :include_blank => true
%tr
  %th= f.label :description
  %td= f.text_area :description, :cols => 40, :rows => 4