%h1= "#{@imageable.name} Images"

= render 'tabs_navigation'

%table.list{:cellpadding => 0, :cellspacing => 1}
  %tr
    %th Image
    %th  Title
    %th Caption
    %th{:colspan => 2} Actions

  - @images.each do |image|
    %tr
      %td= image_tag(image.filename(:thumb))
      %td= h image.title
      %td= h truncate(image.caption)
      %td= link_to 'Edit', edit_admin_imageable_image_path(@imageable, image)
      %td= link_to 'Destroy', admin_imageable_image_path(@imageable, image), :confirm => 'Are you sure?', :method => :delete

%p= link_to 'New image', new_admin_imageable_image_path(@imageable)