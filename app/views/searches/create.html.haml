- @title = %(results for "#{params[:query]}")

%h2 Hardware
%table.list
  - if @search.results[:hardware].empty?
    %p= 'No computer or peripheral matched your keywords.'
  - else
    = render :partial => '/computers/hardware', :collection =>  @search.results[:hardware]
    
